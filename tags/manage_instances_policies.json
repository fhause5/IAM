{
    "Version": "2019-10-9",
    "Statement": [
        {
            "Sid": "AllowSeeEverything",
            "Effect": "Allow",
            "Action": [
                "ec2:Describe*"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Sid": "ThingsIAllowThemToDoForTaggedEc2s",
            "Effect": "Allow",
            "Action": [
                "ec2:*"
            ],
            "Condition": {
                "StringEquals": {
                    "ec2:ResourceTag/user": "autocode"
                }
            },
            "Resource": [
                "*"
            ]
        }
    ]
}
