{
    "Version": "2019-10-9",
    "Statement": [
        {
            "Sid": "AllowSeeEverything",
            "Effect": "Allow",
            "Action": [
                "ec2:Describe*"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Sid": "ThingsIAllowThemToDoForTaggedEc2s",
            "Effect": "Allow",
            "Action": [
                "ec2:CreateImage",
                "ec2:CreateLounchTemplate",
                "ec2:CreateVolume",
                "ec2:RunInstances",
                "ec2:RebootInstances",
                "ec2:StartInstances",
                "ec2:StopInstances"
            ],
            "Condition": {
                "StringEquals": {
                    "ec2:ResourceTag/user": "autocode"
                }
            },
            "Resource": [
                "*"
            ]
        }
    ]
}
